{% for instance in instances %}
    {% include 'CCETCNotificationBundle:Notification:_notification.html.twig' with {'notification' : instance.notification, 'instance' : instance, 'first' : loop.first, 'last' : loop.last } %}
{% endfor %}
{% if instances|length == 0 %}
    <div class="ccetc-item-container">
        <div class="ccetc-item ccetc-meta-item">
            {{ noNotificationText is defined ? noNotificationText : 'No Notifications' }}
        </div>
    </div>
{% endif %}        
